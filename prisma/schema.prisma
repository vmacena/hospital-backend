generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AccessLevel {
  id       Int       @id @default(autoincrement())
  level    String    @unique
  admins   admin[]
  doctors  doctor[]
  patients patient[]
}

model admin {
  id            Int         @id @default(autoincrement())
  record        String      @unique
  address       address     @relation(fields: [addressId], references: [id])
  addressId     Int
  logs          logAccess[]
  accessLevel   AccessLevel @relation(fields: [accessLevelId], references: [id])
  accessLevelId Int
}

model doctor {
  id            Int         @id @default(autoincrement())
  crm           String      @unique
  nameDoctor    String
  specialty     String
  address       address     @relation(fields: [addressId], references: [id])
  addressId     Int
  appointments  appointment[]
  exams         exam[]
  logs          logAccess[]
  accessLevel   AccessLevel @relation(fields: [accessLevelId], references: [id])
  accessLevelId Int
}

model patient {
  id            Int         @id @default(autoincrement())
  susNumber     BigInt      @unique
  namePatient   String
  email         String      @unique
  address       address     @relation(fields: [addressId], references: [id])
  addressId     Int
  appointments  appointment[]
  exams         exam[]
  logs          logAccess[]
  accessLevel   AccessLevel @relation(fields: [accessLevelId], references: [id])
  accessLevelId Int
}

model logAccess {
  id          Int      @id @default(autoincrement())
  adminId     Int?
  doctorId    Int?
  patientId   Int?
  userType    String
  accessLevel String
  timestamp   DateTime @default(now())
  
  admin       admin?   @relation(fields: [adminId], references: [id])
  doctor      doctor?  @relation(fields: [doctorId], references: [id])
  patient     patient? @relation(fields: [patientId], references: [id])
}

model appointment {
  id         Int      @id @default(autoincrement())
  patient    patient  @relation(fields: [patientId], references: [id])
  doctor     doctor   @relation(fields: [doctorId], references: [id])
  patientId  Int
  doctorId   Int
  date       DateTime
  status     String
}

model exam {
  id         Int      @id @default(autoincrement())
  patient    patient  @relation(fields: [patientId], references: [id])
  doctor     doctor   @relation(fields: [doctorId], references: [id])
  patientId  Int
  doctorId   Int
  type       String
  date       DateTime
  result     String?
}

model address {
  id        Int      @id @default(autoincrement())
  cep       String
  street    String
  district  String
  state     String
  city      String
  number    Int
  complement String?

  admin admin[]

  doctor doctor[]

  patient patient[]
}